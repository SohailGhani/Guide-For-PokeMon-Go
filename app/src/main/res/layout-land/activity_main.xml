<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teknords.guideforpokemon.MainActivity"
    android:background="@drawable/homebg">

    <Button

        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/btnPlyr"
        android:background="@drawable/homemain03"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="100dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/btnCatching"
        android:background="@drawable/homemain06"
        android:layout_below="@+id/btnPlyr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/btnTraining"
        android:background="@drawable/homemain08"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/btnStp"
        android:background="@drawable/homemain10"
        android:layout_below="@+id/btnTraining"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/btnGyms"
        android:background="@drawable/homemain12"
        android:layout_below="@+id/btnStp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/btnbtng"
        android:background="@drawable/homemain14"
        android:layout_below="@+id/btnGyms"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnExit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/exit" />
</RelativeLayout>
